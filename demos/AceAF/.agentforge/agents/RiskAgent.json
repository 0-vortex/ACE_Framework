
{

  "Prompts": {

    "System": {
      "vars": ["objectives", "resources"],
      "template": "You are a risk assessment module. Your objectives are: {objectives}. Available resources: {resources}."
    },

    "AssessRisks": {
      "vars": ["environment"],
      "template": "Analyze the environment to identify potential risks and mitigations.",

      "examples": [
        "risk_report:",
        "  - risk: Supply Chain Disruption",
        "    likelihood: High",
        "    impact: Medium",
        "    mitigation: Establish redundant suppliers",
        "",
        "  - risk: Model Failure",
        "    likelihood: Low",
        "    impact: High",
        "    mitigation: Ensemble modeling with fallback",
        "",
        "  # etc..."
      ]
    }

  }

}